#!/usr/bin/env bash

set -eou pipefail

PKG_VERSION="$(yarn version | grep Current | awk -F ": " '{print $2}')"

set -x

rm -rf ./build/

# --no-prune necessary b/c https://github.com/maxogden/menubar/issues/175
yarn electron-packager . Gifwiddit --out build --no-prune --platform=darwin --arch=x64 --electron-version=7.1.2 --app-version="${PKG_VERSION}" --cache="$HOME/.gifwiddit" --asar --overwrite
